<%- include('../includes/header'); %>

<div class="container">
  <h2>Make an order</h2>
  <div class="row">
    <div class="col-6">
      <img
        src="<%= menu.imageUrl %>"
        class="img-thumbnail w-50"
        alt="Foto <%= menu.nama %>"
      />
      <table>
        <tr>
          <td>Nama Menu</td>
          <td class="ps-4"><%= menu.nama %></td>
        </tr>
        <tr>
          <td>Stok</td>
          <td class="ps-4"><%= menu.stok %></td>
        </tr>
        <tr>
          <td>Harga</td>
          <td class="ps-4">Rp <%= menu.harga %></td>
        </tr>
      </table>
    </div>
    <form class="col-6" action="/transactions/store" method="POST">
      <input
        type="text"
        class="form-control"
        id="MenuId"
        name="MenuId"
        value="<%= menu.id %>"
        hidden
      />
      <div class="mb-3">
        <label for="nama" class="form-label">Nama Pembeli</label>
        <input type="text" class="form-control" id="nama" name="nama" />
      </div>
      <div class="mb-3">
        <label for="alamat" class="form-label">Alamat Pembeli</label>
        <input type="text" class="form-control" id="alamat" name="alamat" />
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
</div>

<%- include('../includes/footer'); %>
